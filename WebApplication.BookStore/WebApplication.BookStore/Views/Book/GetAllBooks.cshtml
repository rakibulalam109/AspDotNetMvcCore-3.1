@{ 
    ViewData["DynamicTitle"] = "AllBooks";
}
@*@model IEnumerable<BookModel>*@

<div class="container">
    <h2>All Books</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="card">
                    <img src="https://cdn.pixabay.com/photo/2015/04/23/22/00/tree-736885_960_720.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <a asp-controller="book" asp-action="getbookbyid" asp-route-id="@item.Id"  class="btn btn-primary">Detail</a>
                        <a href="#" class="">@item.Author</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


